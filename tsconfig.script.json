{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@models/*": ["models/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*"]
}
